{
  "name": "simplario/checker",
  "description": "Check provision like a boss",
  "license": "MIT",
  "keywords": [
    "check",
    "checker",
    "provision"
  ],
  "require": {
    "php": ">=5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*",
    "symfony/yaml": "*",
    "ext-json": "*"
  },
  "suggest": {
    "symfony/yaml": "Needed to support YAML format for config",
    "ext-json": "Needed to support JSON format for config"
  },
  "autoload": {
    "psr-4": {
      "Simplario\\Checker\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Simplario\\Checker\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests",
    "phar": "./phar-builder.php"
  },
  "bin": [
    "checker"
  ]
}
